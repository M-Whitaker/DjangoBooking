{
    "overrides": [
        {
            "files": ["**/*.ts", "**/*.tsx"],
            "excludedFiles": "**/*.js",
            "parser": "typescript-eslint-parser",
            "parserOptions": {
                "ecmaVersion": 2018,
                "sourceType": "module",
                "ecmaFeatures": {
                    "jsx": true
                }
            },
            "plugins": ["typescript"],
            "rules": {
                "typescript/rule-name": "error"
            }
        }
    ]
}